<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/profile"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/dishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image"
            android:layout_marginTop="12dp"
            android:text="Sagar Ratan"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>

        
      <ImageView
          android:id="@+id/vnv"
          android:layout_width="24dp"
          android:layout_height="24dp"
          app:layout_constraintTop_toTopOf="parent"
          android:src="@drawable/google5"
          android:layout_marginTop="12dp"
          android:layout_marginEnd="12dp"
          app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/dishminus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toEndOf="@id/price"
            app:layout_constraintEnd_toStartOf="@id/dish"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="28dp"
            android:padding="2dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/roundbutton"
            android:src="@drawable/sub"
            />

        <TextView
            android:id="@+id/dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/dishminus"
            app:layout_constraintEnd_toStartOf="@id/dishadd"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="2"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/dishadd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/add"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dish"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundbutton"
            />


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Rs. 350"
            android:textSize="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>