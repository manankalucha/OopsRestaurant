<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/profile"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:textSize="16dp"
            android:id="@+id/dishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image"
            android:layout_marginTop="12dp"
            android:text="Sagar Ratan"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>


        <ImageView
            android:id="@+id/bedminus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toEndOf="@id/dishName"
            app:layout_constraintEnd_toStartOf="@id/beds"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:padding="2dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/roundbutton"
            android:src="@drawable/sub"
            />

        <TextView
            android:id="@+id/beds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/bedminus"
            app:layout_constraintEnd_toStartOf="@id/bedadd"
            android:text="2"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/bedadd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/add"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/beds"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:background="@drawable/roundbutton"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Rs. 350"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/dishName"
            app:layout_constraintEnd_toEndOf="@id/dishName"
            app:layout_constraintTop_toBottomOf="@id/dishName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/bedminus"
            app:layout_constraintEnd_toStartOf="@id/bedadd"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bedadd"
            android:text="Rs. 352"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>